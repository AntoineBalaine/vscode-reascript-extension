{
	"version": "0.2.0",
	"configurations": [
    {
      "type": "lua-local",
      "request": "launch",
      "name": "lua debug",
      "program": {
        "lua": "lua5.3",
        "file": "src/api-scraper/lua/ultraschall_doc_engine.lua"
      }
    },
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		}
	]
}
