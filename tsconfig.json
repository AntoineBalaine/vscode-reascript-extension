{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"lib": ["es2020", "DOM", "DOM.Iterable"],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"resolveJsonModule": true,
		// Skip lib check is enabled because something funky about JSDOM types, breaks debugging and compiling the extension/project
		"skipLibCheck": true,
    "downlevelIteration": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
